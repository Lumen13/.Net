@model GoodModel

    <div class="col-lg-4">
        <img class="img-thumbnail" src="@Model.Img" alt="@Model.Name" />
        <h2>Модель: @Model.Name</h2>
        <p>Цена: @Model.Price.ToString("c")</p>
        <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart_ControllerFunc" asp-route-id="@Model.ID">Добавить в корзину</a></p>
    </div>